<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Создание таблицы для групповых чатов -->
    <changeSet id="2023-04-01-0001" author="Samat.Zaidullin">
        <createTable tableName="chat_group" schemaName="data">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1024)"/>
        </createTable>

        <!-- Создание таблицы для связи пользователей и чатов -->
        <createTable tableName="chat_group_members" schemaName="data">
            <column name="chat_group_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_chat_group_id"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_id"/>
            </column>
        </createTable>

        <!-- Добавление внешних ключей -->
        <addForeignKeyConstraint constraintName="fk_chat_group_id"
                                 baseTableName="chat_group_members"
                                 baseColumnNames="chat_group_id"
                                 referencedTableName="chat_group"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_user_id"
                                 baseTableName="chat_group_members"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
